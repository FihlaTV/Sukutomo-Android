<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".CardInfo1"
    android:background="@color/back_purple"
    android:configChanges="orientation"
    android:id="@+id/card_info2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/white_header"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout"
        android:layout_above="@+id/skill_details" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/skill"
        android:id="@+id/card_id"
        android:textColor="@android:color/white"
        android:background="@drawable/title_back"
        android:paddingLeft="25dp"
        android:paddingTop="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_toStartOf="@+id/roundImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loading skill name..."
        android:id="@+id/skill_name"
        android:singleLine="true"
        android:shadowColor="@android:color/holo_purple"
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card_id"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Loading skill description..."
        android:id="@+id/skill_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/skill_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/center_skill"
        android:id="@+id/release_date_text"
        android:textColor="@android:color/white"
        android:background="@drawable/title_back"
        android:paddingLeft="25dp"
        android:paddingTop="2dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/skill_details"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Loading skill name..."
        android:id="@+id/center_skill"
        android:singleLine="true"
        android:shadowColor="@android:color/holo_purple"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/release_date_text"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/activity_horizontal_margin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roundImage"
        android:layout_gravity="right"
        android:src="@drawable/round"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

</RelativeLayout>
