<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp" tools:context=".CardBrowser"
    android:id="@+id/Sukutomo"
    android:background="@color/back_pink"
    android:configChanges="orientation"
    android:screenOrientation="portrait">

    <ImageView
        android:id="@+id/card_image2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/loading"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="matrix" />

    <ImageView android:id="@+id/card_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/loading"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="matrix" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuButton"
        android:src="@drawable/menu"
        android:alpha="150"
        android:layout_alignBottom="@+id/arrow_up"
        android:layout_alignLeft="@+id/arrow_right"
        android:layout_alignStart="@+id/arrow_right" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow_up"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_up"
        android:paddingTop="5dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow_right"
        android:src="@drawable/arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/card_image2"
        android:layout_alignEnd="@+id/card_image2"
        android:paddingRight="5dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow_down"
        android:src="@drawable/arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/arrow_up"
        android:layout_alignStart="@+id/arrow_up"
        android:paddingBottom="5dp" />

</RelativeLayout>
